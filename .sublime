# Shamelessly ripped off Paulmillr's Sublime Text configs https://github.com/paulmillr/dotfiles

echo 'Applying sublime config...'
  st=$(pwd)/sublime/Packages
  as="$HOME/Library/Application Support/Sublime Text 2/Packages"
  asprefs="$as/User/Preferences.sublime-settings"
  if [[ -d "$as" ]]; then
    for theme in $st/Theme*; do
      cp -r $theme $as
    done
    rm $asprefs
    cp -r $st/User $asprefs
    cp -r $st/pm-themes $as
  else
    echo "Install Sublime Text http://www.sublimetext.com"
  fi
